<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMainBar</item>
        <item name="colorPrimaryDark">@color/colorNotBar</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:navigationBarColor">@color/colorNotBar</item>
        <item name="android:textColorHint">@color/yellow</item>

        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/colorDirtyWhite</item>
        <!-- To change the background of options menu-->
        <item name="android:itemBackground">@color/colorNotBar</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="CustomSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/yellow</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorDirtyWhite</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#929292</item>
    </style>

    <style name="CustomSeekBar" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/yellow</item>
        <item name="android:colorControlNormal">@color/colorDirtyWhite</item>
    </style>

    <style name="ThemeMyProgressDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/yellow</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomGroupDrawer">
        <item name="android:textColorSecondary">@color/colorDirtyWhite</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

</resources>
