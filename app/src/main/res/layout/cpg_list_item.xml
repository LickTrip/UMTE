<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="5dp"
        android:background="@drawable/border_list_item">

    <TextView
            android:id="@+id/textView_cpg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:text="Date"
            android:textSize="20dp"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:inputType="datetime"/>

    <TextView
            android:id="@+id/textView_cpg_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="Name"
            android:textSize="20dp"
            android:textColor="@color/yellow"
            android:textStyle="bold"/>

    <View
            android:id="@+id/cpq_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/yellow"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_cpg_Name"
            app:layout_constraintBottom_toTopOf="@+id/textView_cpg_text"/>

    <TextView
            android:id="@+id/textView_cpg_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_cpg_Name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:text="Text"
            android:textColor="@color/yellow"
            android:textStyle="italic"
            android:textSize="15dp"
            android:inputType="textMultiLine"
    />
</android.support.constraint.ConstraintLayout>
